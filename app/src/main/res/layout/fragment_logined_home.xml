<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeLoginedFragment">

    <include
        android:id="@+id/include11"
        layout="@layout/item_logo_helo_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/canh_chim_nen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/canh_chim_nen" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-14dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_home_1"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_home_1"
                    android:fontFamily="@font/myriadpro_semiext"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/btn_home_1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textScaleX="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_home_2"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_home_2"
                    android:fontFamily="@font/myriadpro_semiext"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/btn_home_2"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textScaleX="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_home_1" />

                <Button
                    android:id="@+id/btn_home_3"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_home_3"
                    android:fontFamily="@font/myriadpro_semiext"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/btn_home_3"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textScaleX="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_home_2" />

                <Button
                    android:id="@+id/btn_home_4"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_home_4"
                    android:fontFamily="@font/myriadpro_semiext"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/btn_home_4"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textScaleX="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_home_3" />

                <Button
                    android:id="@+id/btn_home_5"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_home_5"
                    android:fontFamily="@font/myriadpro_semiext"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/btn_home_5"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textScaleX="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_home_4" />

                <Button
                    android:id="@+id/btn_home_6"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_home_5"
                    android:fontFamily="@font/myriadpro_semiext"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="Đăng xuất"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textScaleX="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_home_5" />

                <Button
                    android:id="@+id/btn_QR_Code"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_qr"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textScaleX="0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_home_6" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/myriadpro_semiext"
                    android:text="Quét mã QR"
                    android:textColor="@color/textColorGreen"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_QR_Code" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>